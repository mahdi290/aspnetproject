@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product Index";
}

<div class="container p-3" style="margin-left: 15rem;">
    <!-- Add margin-left here -->
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   Create New Product
            </a>
        </div>
    </div>
    <br /><br />

    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top img-fluid" alt="Product image">
                    <div class="card-body">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text"><small class="text-muted">ISBN: @product.ISBN</small></p>
                        <p class="card-text"><small class="text-muted">Author: @product.Author</small></p>
                        <p class="card-text"><small class="text-muted">Category: @product.Category.Name</small></p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            List Price
                            <span class="badge bg-primary rounded-pill">@product.ListPrice</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Price
                            <span class="badge bg-primary rounded-pill">@product.Price</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Price50
                            <span class="badge bg-primary rounded-pill">@product.Price50</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Price100
                            <span class="badge bg-primary rounded-pill">@product.Price100</span>
                        </li>
                    </ul>
                    <div class="card-footer">
                        <div class="btn-group mt-2" role="group">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
